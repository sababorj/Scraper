<div class="jumbotron">
<h2>Notes For Article: {{id}}</h2>
{{#if noNote}}
<h4>No notes for this article yet.</h4>
{{/if}}
<ol class="list-group note-container"></ul>
{{#each note}}
    <li><p>{{this.msg}}</p>
        <a class="btn btn-danger note-delete" data-id={{id}} >delete</a>
        </li>
{{/each}}
</ul>
<textarea placeholder="New Note" rows="4" cols="60"></textarea>
<button class="btn btn-success saveNote" data-id={{id}}>Save Note</button>
</div>